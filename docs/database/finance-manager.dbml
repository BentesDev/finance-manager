Table users {
  id bigint [pk, increment]
  email varchar [not null, unique]
  password_hash varchar [not null]
  created_at timestamp
}

Table accounts {
  id bigint [pk, increment]
  name varchar [not null]
  type varchar [not null]
  balance decimal [not null, default: 0]
  user_id bigint [not null]
}

Table categories {
  id bigint [pk, increment]
  name varchar [not null]
  type varchar [not null]
  user_id bigint [not null]
}

Table transactions {
  id bigint [pk, increment]
  description varchar
  amount decimal [not null]
  date date [not null]
  type varchar [not null]
  account_id bigint [not null]
  category_id bigint [not null]
  user_id bigint [not null]
  credit_card_id bigint
}

Table credit_cards {
  id bigint [pk, increment]
  name varchar [not null]
  limit decimal [not null]
  closing_day int [not null]
  due_day int [not null]
  user_id bigint [not null]
}

Table invoices {
  id bigint [pk, increment]
  month int [not null]
  year int [not null]
  total decimal [not null, default: 0]
  status varchar [not null]
  credit_card_id bigint [not null]
}

Table installments {
  id bigint [pk, increment]
  transaction_id bigint [not null]
  number int [not null]
  total_installments int [not null]
  amount decimal [not null]
}

Ref: accounts.user_id > users.id
Ref: categories.user_id > users.id
Ref: transactions.user_id > users.id
Ref: transactions.account_id > accounts.id
Ref: transactions.category_id > categories.id
Ref: transactions.credit_card_id > credit_cards.id
Ref: credit_cards.user_id > users.id
Ref: invoices.credit_card_id > credit_cards.id
Ref: installments.transaction_id > transactions.id
